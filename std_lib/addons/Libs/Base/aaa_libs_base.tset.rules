
# This is the Rubble tileset applier default rule file.

# See Rubble Basics for format information.

# Main raw Files

!(MATERIAL_TAGS){
	DISPLAY_COLOR:?(3)
	TILE:?
	ITEM_SYMBOL:?
	BUILD_COLOR:?(3)
	TILE_COLOR:?(3)
	BASIC_COLOR:?(2)
	STATE_COLOR:$:?
}

CREATURE:$|{
	CREATURE_TILE:?
	CREATURE_SOLDIER_TILE:?
	ALTTILE:?
	SOLDIER_ALTTILE:?
	COLOR:?(3)
	GLOWTILE:?
	GLOWCOLOR:?(3)
	REMAINS_COLOR:?(3)
	SENSE_CREATURE_CLASS:$:?(4)
	
	MATERIAL:$|%(MATERIAL_TAGS)
	USE_MATERIAL:$|%(MATERIAL_TAGS)
	USE_MATERIAL_TEMPLATE:$:&|%(MATERIAL_TAGS)
	
	CASTE:$|{
		CASTE_TILE:?
		CASTE_SOLDIER_TILE:?
		CASTE_ALTTILE:?
		CASTE_SOLDIER_ALTTILE:?
		CASTE_COLOR:?(3)
		CASTE_GLOWTILE:?
		CASTE_GLOWCOLOR:?(3)
		REMAINS_COLOR:?(3)
		SENSE_CREATURE_CLASS:$:?(4)
		
		MATERIAL:$|%(MATERIAL_TAGS)
		USE_MATERIAL:$|%(MATERIAL_TAGS)
		USE_MATERIAL_TEMPLATE:$:&|%(MATERIAL_TAGS)
	}
}

PLANT:$|{
	TREE_TILE:?
	DEAD_TREE_TILE:?
	SAPLING_TILE:?
	DEAD_SAPLING_TILE:?
	TREE_COLOR:?(3)
	DEAD_TREE_COLOR:?(3)
	SAPLING_COLOR:?(3)
	DEAD_SAPLING_COLOR:?(3)
	PICKED_TILE:?
	DEAD_PICKED_TILE:?
	SHRUB_TILE:?
	DEAD_SHRUB_TILE:?
	PICKED_COLOR:?(3)
	DEAD_PICKED_COLOR:?(3)
	SHRUB_COLOR:?(3)
	DEAD_SHRUB_COLOR:?(3)
	GRASS_TILES:?(4)
	ALT_GRASS_TILES:?(4)
	GRASS_COLORS:?(12)
	ALT_PERIOD:?(2)
	SEED:&(2):?(3):&(2)
	
	GROWTH:$|{
		GROWTH_PRINT:?(5):$(2):&(0,1)
		GROWTH_PRINT:?(5):ALL:&(0,1)
		GROWTH_PRINT:?(5):NONE:&(0,1)
	}
	
	MATERIAL:$|%(MATERIAL_TAGS)
	USE_MATERIAL:$|%(MATERIAL_TAGS)
	USE_MATERIAL_TEMPLATE:$:&|%(MATERIAL_TAGS)
}

MATERIAL_TEMPLATE:$|%(MATERIAL_TAGS)
INORGANIC:$|%(MATERIAL_TAGS)

!(BUILDING_TAGS){
	NAME_COLOR:?(3)
	TILE:$(2):?(1,-1)
	COLOR:$(2):?(1,-1)
}

BUILDING_WORKSHOP:$|%(BUILDING_TAGS)
BUILDING_FURNACE:$|%(BUILDING_TAGS)

# This keeps creatures from clobbering entities.
# Due to the way the tileset tree is pruned this tag will not actually show in generated tset files.
ENTITY:$|CREATURE:&

ENTITY:$|POSITION:$|COLOR:?(3)
ENTITY:$|FRIENDLY_COLOR:?(3)

ITEM_TOOL:$|TILE:?

SHAPE:$|TILE:?

